                  writeln(sortedTen, str);
                end;
                close(sortedTen);
            end;
            2: begin
                readN(arrN);
                selectSort(arrN);
            end;
            3: begin
                break;
               end;

         end;
       end;
   end;
   3: begin
        while true do
        begin
          writeln('1. Sort by part 2. Sort N array 3. Exit to general menu');
          readln(menu);
          case menu of
          1:begin
              readFull(arr);
              t1:=Now();
