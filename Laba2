    writeln(masN, str);
  end;
  close(masN);
  rewrite(fullmas);
  for i:=0 to 99999 do
  begin
    arr[i] := random(100)+100;
    str := IntToStr(arr[i]);
    writeln(fullmas, str);
  end;
  close(fullmas);
  while true do
  begin
    writeln('1. Quick sort 2. Selection sort 3. Insertion sort 4. Bubble sort');
