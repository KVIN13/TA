                str := IntToStr(arr[i]);
                writeln(sortedTen, str);
              end;
              close(sortedTen);
              writeln('Time of sorting 10000 parts = ',MillisecondsBetween(t1,t2));
          end;
          2: begin
              writeln('Enter "i" and "j" for partial sorting');
              readln(n); readln(i);
              partQSort(arrN, n, i);
